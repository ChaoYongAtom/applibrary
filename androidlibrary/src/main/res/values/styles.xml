<resources>

    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="dialog_tran.fullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>
    <style name="toast_style">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="Animations_BottomPush">
        <item name="android:windowEnterAnimation">@anim/pw_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pw_push_bottom_out</item>
    </style>
    <style name="Animations_TopPush">
        <item name="android:windowEnterAnimation">@anim/pw_push_top_in</item>
        <item name="android:windowExitAnimation">@anim/pw_push_top_out</item>
    </style>

    <style name="Animations_ZoomPush">
        <item name="android:windowEnterAnimation">@anim/pw_push_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/pw_push_zoom_out</item>
    </style>
    <!-- title样式-->
    <style name="titleType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="hlItemTextSize">@dimen/sp_15</item>
        <item name="hlTitleTextSize">24sp</item>
        <item name="hlItemTextColor">#333333</item>
        <item name="hlTitleTextColor">#333333</item>
        <item name="hlNavigationIcon">@mipmap/back_black_ico</item>
        <item name="hlItemMarginLeftAndRight">@dimen/dp_10</item>
        <item name="hlItemTextPaddingLeftAndRight">@dimen/dp_10</item>
    </style>
</resources>
