<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="titleType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="libarary.app.wcy.com.myapplication:hlItemTextSize">14sp</item>
        <item name="libarary.app.wcy.com.myapplication:hlTitleTextSize">18sp</item>
        <item name="libarary.app.wcy.com.myapplication:hlItemTextColor">@color/green</item>
        <item name="libarary.app.wcy.com.myapplication:hlTitleTextColor">@color/black</item>
        <item name="libarary.app.wcy.com.myapplication:hlNavigationIcon">@mipmap/back_btn</item>
        <item name="libarary.app.wcy.com.myapplication:hlItemMarginLeftAndRight">@dimen/dp_10</item>
        <item name="libarary.app.wcy.com.myapplication:hlItemTextPaddingLeftAndRight">@dimen/dp_10</item>
    </style>
</resources>
